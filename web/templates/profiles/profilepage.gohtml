{{ define "profilepage" }}
{{ template "base" . }}
{{ end }}
{{ define "title" }}Profile - {{ .Data.Username }}{{ end }}

{{ define "head" }}
<link rel="stylesheet" href="/static/css/profilepage.css">
{{ end }}

{{ define "content" }}
